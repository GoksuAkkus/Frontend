   onInput(event: Event) {
+    const inputElement: HTMLInputElement = <HTMLInputElement>event.target;
+    const key = event['data'];
+
+    if (inputElement.value.length > 10) {
+      inputElement.value = inputElement.value.slice(0, inputElement.value.length - 1);
