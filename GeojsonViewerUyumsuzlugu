     return pointData;
   }
 
+  convertEPSG3857PolylineGeomToWGS84ForFile(geometry: any) {
+    const geometryPaths = geometry.get('paths');
+
+    const convertedWGS84Paths = [];
+
+    geometryPaths[0].forEach(path => {
+
+      const convertedRing = this.toWGS84PointArray(path[0], path[1]);
+
+      convertedWGS84Paths.push(convertedRing);
+    });
+
+    geometry.set('paths', [convertedWGS84Paths]);
+  }
+
+  convertEPSG3857PolygonGeomToWGS84ForFile(geometry: any) {
+    const geometryRings = geometry.get('rings');
+
+    const convertedWGS84Rings = [];
+
+    geometryRings[0].forEach(ring => {
+
+      const convertedRing = this.toWGS84PointArray(ring[0], ring[1]);
+
+      convertedWGS84Rings.push(convertedRing);
+    });
+
+    // Loop olması için ilk point aynı zamanda ringsin sonunda da olmalı.
+    convertedWGS84Rings.push(convertedWGS84Rings[0]);
+
+    geometry.set('rings', [convertedWGS84Rings]);
+  }
+
+
